<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/card1"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/activity_infos"
            android:layout_width="358dp"
            android:layout_height="312dp"
            android:layout_marginStart="10dp"
            android:text="İsmi\n\nTürü \n\nTarihi \n\nKonum\n\nKombin"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="227dp" />

        <LinearLayout
            android:id="@+id/a_edit_inputs"
            android:layout_width="248dp"
            android:layout_height="309dp"
            android:layout_marginStart="120dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">


            <EditText
                android:id="@+id/a_name"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />

            <EditText
                android:id="@+id/a_tur"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="" />

            <EditText
                android:id="@+id/date_input2"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="date" />

            <EditText
                android:id="@+id/konum"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="" />

            <Spinner
                android:id="@+id/kombinSpinner"
                android:layout_width="190dp"
                android:layout_height="43dp" />

            <Button
                android:id="@+id/etkinliki_olustur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Etkinliği oluştur" />
            />
        </LinearLayout>

        <ImageButton
            android:id="@+id/editbtn"
            android:layout_width="45dp"
            android:layout_height="52dp"
            android:layout_marginStart="330dp"
            android:background="@drawable/edit" />

    </androidx.cardview.widget.CardView>


</LinearLayout>